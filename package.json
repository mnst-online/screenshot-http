{
  "name": "ss-http",
  "version": "1.0.0",
  "description": "Simple screenshot taker",
  "main": "app.js",
  "bin": "dist/app.js",
  "scripts": {
    "start": "ts-node src/app.ts",
    "copy:public": "copyfiles -u 1 src/public/**/* dist/",
    "build": "tsc && npm run copy:public",
    "exe": "npx pkg -t win -o app.exe ./dist/app.js",
    "lint": "eslint --ext .ts",
    "format": "prettier --write ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "node-cache": "^5.1.2",
    "screenshot-desktop": "^1.15.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/screenshot-desktop": "^1.12.3",
    "copyfiles": "^2.4.1",
    "pkg": "^5.8.1",
    "prettier": "^3.2.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "volta": {
    "node": "18.19.0"
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "assets": "dist/public/**/*",
    "targets": [
      "node18-win-x64"
    ],
    "outputPath": "."
  }
}
